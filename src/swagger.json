{
  "openapi": "3.0.0",
  "info": {
    "title": "Pragma Enterprise API",
    "description": "Blockchain notarization middleware API on Polygon/Sepolia. Supports Zero-Knowledge Privacy, AI Labeling, and integrated Billing via Stripe.\n\n### Available Plans\n- **Developer:** Free (50 req/mo)\n- **Startup:** €299 (5,000 req/mo)\n- **Scale:** €999 (25,000 req/mo)\n- **Enterprise:** Pay-as-you-go (Unlimited)",
    "version": "2.9.0",
    "contact": {
      "email": "dev@pragma.io"
    },
    "license": {
      "name": "Proprietary",
      "url": "https://pragma.io/terms"
    }
  },
  "servers": [
    {
      "url": "https://pragma-api.onrender.com",
      "description": "Production Server"
    },
    {
      "url": "http://localhost:3000",
      "description": "Local Development Server"
    }
  ],
  "tags": [
    {
      "name": "Certification",
      "description": "Notarization operations and certificate retrieval"
    },
    {
      "name": "Account",
      "description": "Account management, usage tracking, and billing"
    },
    {
      "name": "Onboarding",
      "description": "Public registration and payments"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key",
        "description": "Enter your API Key (e.g., pk_live_...)"
      }
    },
    "schemas": {
      "CertificationRequest": {
        "type": "object",
        "required": [
          "hash",
          "ai_label"
        ],
        "properties": {
          "hash": {
            "type": "string",
            "description": "SHA-256 file hash (hex string format)",
            "example": "a591a6d40bf420404a011733cfb7b190d62c65bf0bcda32b57b277d9ad9f146e"
          },
          "description": {
            "type": "string",
            "description": "Optional content description (max 200 chars)",
            "example": "Preliminary Contract - Project Alpha"
          },
          "ai_label": {
            "type": "string",
            "enum": [
              "Human",
              "AI",
              "Mixed"
            ],
            "description": "Authorship declaration for AI Act compliance",
            "example": "Human"
          }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": [
          "name",
          "email",
          "plan"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "Mario Rossi Corp"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "tech@company.com"
          },
          "plan": {
            "type": "string",
            "enum": [
              "Developer",
              "Startup",
              "Scale",
              "Enterprise"
            ],
            "description": "Selected plan. Developer is free/immediate, others require payment.",
            "example": "Startup"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Bad Request"
          },
          "message": {
            "type": "string",
            "example": "The 'hash' field is required."
          }
        }
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/certify": {
      "post": {
        "tags": [
          "Certification"
        ],
        "summary": "Notarize a file on Blockchain",
        "description": "Submits a file hash for immutable registration. Requires sufficient credits in the active plan.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CertificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Certification started successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "txHash": { "type": "string" },
                    "certificateUrl": { "type": "string" },
                    "remaining_credits": { "type": "integer" }
                  }
                },
                "example": {
                  "success": true,
                  "txHash": "0x123abc456def...",
                  "certificateUrl": "https://api.pragma.io/cert/0x123...pdf",
                  "remaining_credits": 4999
                }
              }
            }
          },
          "400": {
            "description": "Missing data or invalid hash",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "402": {
            "description": "Payment Required (Limit Reached)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "error": "Payment Required",
                  "message": "You have reached the limit of the Startup plan (5000 requests). Please upgrade."
                }
              }
            }
          },
          "403": {
            "description": "Invalid API Key or suspended account"
          }
        }
      }
    },
    "/certify/{txHash}": {
      "get": {
        "tags": [
          "Certification"
        ],
        "summary": "Get Status or PDF",
        "description": "Retrieves transaction status and the generated PDF certificate link.",
        "parameters": [
          {
            "in": "path",
            "name": "txHash",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Blockchain Transaction Hash"
          }
        ],
        "responses": {
          "200": {
            "description": "Details found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "timestamp": { "type": "string" },
                    "block_number": { "type": "integer" },
                    "pdf_url": { "type": "string" }
                  }
                },
                "example": {
                  "status": "Confirmed",
                  "timestamp": "2025-12-05T14:30:00Z",
                  "block_number": 123456,
                  "pdf_url": "https://api.pragma.io/cert/..."
                }
              }
            }
          },
          "404": {
            "description": "Certification not found"
          }
        }
      }
    },
    "/usage": {
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "Check Usage and Limits",
        "description": "Returns current client usage and active plan limits.",
        "responses": {
          "200": {
            "description": "Usage data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "client": { "type": "string" },
                    "plan": { "type": "string" },
                    "total_requests": { "type": "integer" },
                    "limit": { "type": "integer" },
                    "status": { "type": "string" }
                  }
                },
                "example": {
                  "client": "Mario Rossi Corp",
                  "plan": "Startup",
                  "total_requests": 1542,
                  "limit": 5000,
                  "status": "active"
                }
              }
            }
          }
        }
      }
    },
    "/billing/create-checkout-session": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Create Payment Link (Upgrade)",
        "description": "Generates a Stripe link to upgrade plan or update billing details.",
        "responses": {
          "200": {
            "description": "Link generated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "url": { "type": "string" }
                  }
                },
                "example": {
                  "url": "https://checkout.stripe.com/c/pay/..."
                }
              }
            }
          }
        }
      }
    },
    "/onboarding/register": {
      "post": {
        "tags": [
          "Onboarding"
        ],
        "summary": "New User Registration",
        "description": "Public endpoint for registration. No Auth required.",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success (Direct API Key or Payment Link)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "apiKey": { "type": "string" },
                    "redirectUrl": { "type": "string" }
                  }
                },
                "examples": {
                  "Developer": {
                    "summary": "Free Plan",
                    "value": {
                      "success": true,
                      "apiKey": "pk_live_..."
                    }
                  },
                  "Enterprise": {
                    "summary": "Paid Plan",
                    "value": {
                      "success": true,
                      "redirectUrl": "https://checkout.stripe.com/..."
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Email already registered"
          }
        }
      }
    },
    "/onboarding/finalize": {
      "get": {
        "tags": [
          "Onboarding"
        ],
        "summary": "Post-Payment Callback",
        "description": "Called by frontend after returning from Stripe to confirm account and retrieve API Key.",
        "security": [],
        "parameters": [
          {
            "in": "query",
            "name": "session_id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Stripe Checkout Session ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Account activated and Key generated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "apiKey": { "type": "string" },
                    "email": { "type": "string" }
                  }
                },
                "example": {
                  "apiKey": "pk_live_...",
                  "email": "tech@company.com"
                }
              }
            }
          },
          "400": {
            "description": "Missing or invalid Session ID"
          }
        }
      }
    }
  }
}